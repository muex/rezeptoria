{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="flex items-center justify-center p-4">
    <div class="max-w-md w-full bg-white rounded-xl shadow-lg p-8">
        <h1 class="text-2xl font-bold text-gray-900 mb-6 text-center">Register</h1>
        {{ form_start(registrationForm, {'attr': {'class': 'space-y-4'}}) }}
            <div>
                {{ form_label(registrationForm.username, 'Benutzername', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
                {{ form_widget(registrationForm.username, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500'}}) }}
                {{ form_errors(registrationForm.username) }}
            </div>
            <div>
                {{ form_label(registrationForm.plainPassword, 'Passwort', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500'}}) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>

            <div class="flex items-center">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'mr-2'}}) }}
                {{ form_label(registrationForm.agreeTerms, 'Ich stimme den Nutzungsbedingungen zu', {'label_attr': {'class': 'text-sm text-gray-700'}}) }}
            </div>
            {{ form_errors(registrationForm.agreeTerms) }}
            <button type="submit" class="w-full bg-pinegreen hover:bg-pinegreen-40 text-white font-medium py-2.5 rounded-lg transition-colors">
                Registrieren
            </button>
        {{ form_end(registrationForm) }}
        <p class="mt-6 text-center text-sm text-gray-600">
            Bereits ein Konto? <a href="{{ path('app_login') }}" class="text-pinegreen hover:text-pinegreen-40 font-medium">Anmelden</a>
        </p>
    </div>
</div>
{% endblock %}
